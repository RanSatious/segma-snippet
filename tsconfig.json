{
    "include": ["src/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",

        "allowJs": false,
        "declaration": true,

        "strict": true,
        "noUnusedLocals": true,

        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",

        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true
    }
}
